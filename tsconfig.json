{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noImplicitAny": true,

    "module": "esnext",
    "sourceMap": true,
    "jsx": "preserve",
    "target": "es5",
    "allowJs": true,
    "baseUrl": ".",
    "strict": true,

    "typeRoots": [
      "node_modules/@types"
    ],

    // "types": [
    //   "webpack-env",
    //   "vue-meta"
    // ],

    "paths": {
      "@postprocessing/*": ["node_modules/three/examples/jsm/postprocessing/*"],
      "@controls/*": ["node_modules/three/examples/jsm/controls/*"],
      "@shaders/*": ["node_modules/three/examples/jsm/shaders/*"],
      "@loaders/*": ["node_modules/three/examples/jsm/loaders/*"],
      "@utils/*": ["node_modules/three/examples/jsm/utils/*"],
      "@three/*": ["node_modules/three/src/*"],

      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@scss/*": ["src/scss/*"],
      "@/*": ["src/*"]
    },

    "lib": [
      "dom.iterable",
      "scripthost",
      "esnext",
      "dom"
    ]
  },

  "include": [
    "src/**/*.vue",
    "src/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "public"
  ]
}
