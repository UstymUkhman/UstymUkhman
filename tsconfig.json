{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noImplicitAny": true,

    "module": "ESNext",
    "sourceMap": true,
    "jsx": "preserve",
    "target": "ES5",

    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "strict": true,

    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@scss/*": ["src/scss/*"],
      "@/*": ["src/*"]
    },

    "typeRoots": [
      "node_modules/@types"
    ],

    "lib": [
      "dom.iterable",
      "scripthost",
      "esnext",
      "dom"
    ],

    "types": []
  },

  "include": [
    "src/**/*.vue",
    "src/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
