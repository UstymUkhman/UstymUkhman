{
  "extends": "tslint:latest",
  "jsRules": true,

  "rules": {
    "no-implicit-dependencies": false,
    "no-submodule-imports": false,
    "no-console": false,

    "no-debugger": {
      "severity": "warning"
    },

    "max-line-length": {
      "options": [150]
    }
  },

  "linterOptions": {
    "exclude": [
      "src/**/*.vue",
      "dist/*"
    ]
  }
}
